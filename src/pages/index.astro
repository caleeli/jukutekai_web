---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Jukutek AI',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Conoce más',
        href: '#features',
      },
    ]}
    image={{ src: '~/assets/images/jukutekai.jpg', alt: 'JukuTek AI Hero Image' }}
  >
    <Fragment slot="title">
      JukuTek AI: Innovación en Tecnología y Software
    </Fragment>

    <Fragment slot="subtitle">
      JukuTek AI, se dedica a la programación informática, ofreciendo servicios integrales que incluyen consultorías, análisis, resolución de problemas, documentación, soporte, mantenimiento y asesoramiento personalizado en software.
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Servicios"
    title="Nuestros Servicios"
    items={[
      {
        title: 'Desarrollo de software',
        description: 'Diseño, desarrollo y comercialización de software y hardware para diferentes plataformas y sectores industriales.',
        icon: 'tabler:code',
      },
      {
        title: 'Consultoría tecnológica',
        description: 'Prestación de servicios de asesoramiento y consultoría en tecnología de la información para empresas y organizaciones.',
        icon: 'tabler:device-desktop-analytics',
      },
      {
        title: 'Mantenimiento de sistemas',
        description: 'Servicios de soporte y mantenimiento de hardware y sistemas informáticos para garantizar su correcto funcionamiento.',
        icon: 'tabler:settings',
      },
      {
        title: 'Hospedaje en línea',
        description: 'Provisión de hospedaje para aplicaciones web, garantizando seguridad y accesibilidad para empresas y organizaciones.',
        icon: 'tabler:cloud',
      },
    ]}
  />

  <!-- Products Widget *************** -->

  <Features
    id="products"
    tagline="Productos"
    title="Nuestros Productos"
    items={[
      {
        title: 'Sistema de Auditoría',
        description: 'Incluye gestión de proyectos de auditoría, programas, reportes, y hojas de trabajo.',
        icon: 'tabler:clipboard-list',
      },
      {
        title: 'Sistema de Tareas',
        description: 'Incluye gestión de proyectos, usuarios, tareas por proyecto.',
        icon: 'tabler:checklist',
      },
      {
        title: 'Sistema de Hoja de Rutas',
        description: 'Incluye códigos de seguimiento, reportes, gestiones.',
        icon: 'tabler:route',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Contáctanos',
        href: 'mailto:info@jukutekai.com',
        icon: 'tabler:mail',
      },
    ]}
  >
    <Fragment slot="title">
      ¿Interesado en nuestros servicios?
    </Fragment>

    <Fragment slot="subtitle">
      Ponte en contacto con nosotros para obtener más información sobre cómo podemos ayudarte a alcanzar tus objetivos tecnológicos.
    </Fragment>
  </CallToAction>
</Layout>